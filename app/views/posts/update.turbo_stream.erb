<% if params[:field] == "title" %>
  <%= turbo_stream.update dom_id(@post, "title_turbo_frame") do %>
    <h3 class="text-xl font-semibold text-gray-900 mb-2"><%= @post.title %></h3>
    <%= link_to "Edit title", edit_post_path(@post, field: "title"), class: "text-gray-500 hover:text-gray-700 font-medium", data: { turbo_frame: dom_id(@post, "title_turbo_frame") } %>
  <% end %>
<% elsif params[:field] == "body" %>
  <%= turbo_stream.update dom_id(@post, "body_turbo_frame") do %>
    <p class="text-gray-700 leading-relaxed"><%= @post.body %></p>
    <%= link_to "Edit body", edit_post_path(@post, field: "body"), class: "text-gray-500 hover:text-gray-700 font-medium", data: { turbo_frame: dom_id(@post, "body_turbo_frame") } %>
  <% end %>
<% else %>
  <%= turbo_stream.update dom_id(@post) do %>
    <%= render @post %>
  <% end %>
<% end %>

