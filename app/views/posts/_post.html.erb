<% frame_id = dom_id(post, "title_turbo_frame") %>
<%= turbo_frame_tag frame_id do %>
  <h3 class="text-xl font-semibold text-gray-900 mb-2"><%= post.title %></h3>
  <%= link_to "Edit title", edit_post_path(post, field: "title"), class: "text-blue-600 hover:text-blue-800 font-medium", data: { turbo_frame: frame_id } %>
<% end %>
<% frame_id = dom_id(post, "body_turbo_frame") %>
<%= turbo_frame_tag frame_id do %>
  <p class="text-gray-700 leading-relaxed"><%= post.body %></p>
  <%= link_to "Edit body", edit_post_path(post, field: "body"), class: "text-blue-600 hover:text-blue-800 font-medium", data: { turbo_frame: frame_id } %>
<% end %>
<%= button_to "Destroy this post", post, method: :delete, class: "inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-medium rounded-md shadow-sm transition-colors duration-200 mt-4", data: { turbo_method: :delete } %>
