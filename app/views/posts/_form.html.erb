<div data-controller="post-id">
  <%= form_with(model: post, class: "space-y-6") do |form| %>
    <% if post.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-800 rounded-lg p-4">
        <h2 class="font-semibold text-lg mb-2"><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul class="list-disc list-inside space-y-1">
          <% post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="space-y-2">
      <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :title, data: { action: "input->post-id#validate" }, class: "w-full border border-gray-300 rounded-md px-3 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="space-y-2">
      <%= form.label :body, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :body, data: { action: "input->post-id#validate" }, rows: 6, class: "w-full border border-gray-300 rounded-md px-3 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 resize-y" %>
    </div>

    <div>
      <%= form.submit class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md shadow-sm transition-colors duration-200 cursor-pointer disabled:opacity-50 disabled:cursor-not-allowed" %>
    </div>
  <% end %>
</div>